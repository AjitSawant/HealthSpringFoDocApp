<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_margin"
    android:background="@drawable/border_primary_dark"
    android:orientation="horizontal"
    android:paddingTop="@dimen/ten_margin"
    android:paddingBottom="@dimen/ten_margin"
    android:paddingLeft="@dimen/ten_margin"    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_cpoeservice_tv_service_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_cpoeservice_tv_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:padding="2dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold"
                android:visibility="visible" />
        </LinearLayout>

        <TextView
            android:id="@+id/row_cpoeservice_tv_priority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:enabled="false"
            android:padding="2dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/is_record_sync_tv"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light" />

</LinearLayout>
