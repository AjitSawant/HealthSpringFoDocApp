<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_profile_lable1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="3dp"
                android:singleLine="true"
                android:text="Personal Information"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/five_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_lighter_gray">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/patient_reg_spinnerperfix"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text_size"
                        android:background="@null"
                        android:visibility="visible"
                        app:ms_arrowColor="@color/text_color"
                        app:ms_arrowSize="12sp"
                        android:layout_margin="4dp"
                        app:ms_enableErrorLabel="false"
                        app:ms_enableFloatingLabel="false"
                        app:ms_hint="@string/profile_perfix"
                        app:ms_hintColor="@color/text_color"
                        app:ms_thickness="0dp"
                        app:ms_multiline="false" />
                </LinearLayout>

                <EditText
                    android:id="@+id/patient_reg_edt_fname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/bnt_dashboard"
                    android:gravity="center_vertical"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/profile_fname"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/patient_reg_edt_mname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/bnt_dashboard"
                    android:gravity="center_vertical"
                    android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/profile_mname"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/patient_reg_edt_lname"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/bnt_dashboard"
                    android:gravity="center_vertical" android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="@string/profile_lname"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/patient_reg_edt_dob"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/bnt_dashboard"
                    android:gravity="center_vertical"
                    android:digits="0123456789/"
                    android:hint="@string/profile_dob"
                    android:focusable="false"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/patient_reg_edt_education"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/bnt_dashboard"
                    android:gravity="center_vertical"
                    android:hint="@string/profile_edu"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border_lighter_gray">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/patient_reg_spinner_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text_size"
                        android:background="@null"
                        android:visibility="visible"
                        app:ms_arrowColor="@color/text_color"
                        app:ms_arrowSize="12sp"
                        android:layout_margin="4dp"
                        app:ms_enableErrorLabel="false"
                        app:ms_enableFloatingLabel="false"
                        app:ms_hint="@string/profile_gender"
                        app:ms_hintColor="@color/text_color"
                        app:ms_thickness="0dp"
                        app:ms_multiline="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/border_lighter_gray">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/patient_reg_spinner_maritalstatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text_size"
                        android:background="@null"
                        android:visibility="visible"
                        app:ms_arrowColor="@color/text_color"
                        app:ms_arrowSize="12sp"
                        android:layout_margin="4dp"
                        app:ms_enableErrorLabel="false"
                        app:ms_enableFloatingLabel="false"
                        app:ms_hint="@string/profile_maritalstatus"
                        app:ms_hintColor="@color/text_color"
                        app:ms_thickness="0dp"
                        app:ms_multiline="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/border_lighter_gray">

                    <fr.ganfra.materialspinner.MaterialSpinner
                        android:id="@+id/patient_reg_spinner_bloodgroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_text_size"
                        android:background="@null"
                        android:visibility="visible"
                        app:ms_arrowColor="@color/text_color"
                        app:ms_arrowSize="12sp"
                        android:layout_margin="4dp"
                        app:ms_enableErrorLabel="false"
                        app:ms_enableFloatingLabel="false"
                        app:ms_hint="@string/profile_blood"
                        app:ms_hintColor="@color/text_color"
                        app:ms_thickness="0dp"
                        app:ms_multiline="false" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/txt_profile_lable3"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:background="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="3dp"
                android:singleLine="true"
                android:text="Contact Details"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/five_margin">

                <EditText
                    android:id="@+id/patient_reg_email"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/bnt_dashboard"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:hint="@string/profile_email"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/patient_reg_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/bnt_dashboard"
                    android:gravity="center_vertical"
                    android:imeOptions="actionNext"
                    android:hint="@string/profile_mob"
                    android:inputType="number"
                    android:singleLine="true"
                    android:paddingLeft="10dp"
                    android:maxLength="10"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/text_color"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
