<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/five_margin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/five_margin"
                android:background="@color/bluelight400"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="3dp"
                android:singleLine="true"
                android:text="Patient Information"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_margin"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/five_margin">

                <android.support.design.widget.TextInputLayout
                    style="@style/TextLabel_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/appointment_edt_patient_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="Patient Name"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_margin"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/TextLabel_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/appointment_edt_patient_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/profile_mob"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_margin"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/TextLabel_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/appointment_edt_patient_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="@string/profile_email"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_margin"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/five_margin"
                android:background="@color/bluelight400"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="3dp"
                android:singleLine="true"
                android:text="Doctor Information"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_margin"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/five_margin">

                <android.support.design.widget.TextInputLayout
                    style="@style/TextLabel_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/appointment_edt_doctor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="Doctor Name"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_margin"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/TextLabel_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/appointment_edt_doctor_spcilization"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="@string/profile_specialization"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_margin"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/TextLabel_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/appointment_edt_doctor_education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                        android:hint="@string/profile_edu"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_margin"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/TextLabel_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/appointment_edt_doctor_contactno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:digits="0123456789"
                        android:hint="@string/profile_mob"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_margin"
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size" />
                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="@dimen/five_margin"
                android:background="@color/bluelight400"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:padding="3dp"
                android:singleLine="true"
                android:text="Appointment Information"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/five_margin"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/five_margin">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextLabel_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/appointment_edt_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/date"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/ten_margin"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/small_text_size" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        style="@style/TextLabel_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <EditText
                            android:id="@+id/appointment_edt_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/time"
                            android:maxLines="1"
                            android:paddingLeft="@dimen/ten_margin"
                            android:singleLine="true"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/small_text_size" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/appointment_spinner_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_arrowColor="@color/text_color"
                    app:ms_arrowSize="@dimen/small_text_size"
                    app:ms_baseColor="@color/text_color"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="true"
                    app:ms_highlightColor="@color/text_color"
                    app:ms_hint="@string/department"
                    app:ms_hintColor="@color/text_color"
                    app:ms_multiline="false" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/appointment_spinner_appointmetreason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_arrowColor="@color/text_color"
                    app:ms_arrowSize="@dimen/small_text_size"
                    app:ms_baseColor="@color/text_color"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="true"
                    app:ms_highlightColor="@color/text_color"
                    app:ms_hint="@string/appointmentreason"
                    app:ms_hintColor="@color/text_color"
                    app:ms_multiline="false" />

                <fr.ganfra.materialspinner.MaterialSpinner
                    android:id="@+id/appointment_spinner_complaint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:ms_arrowColor="@color/text_color"
                    app:ms_arrowSize="@dimen/small_text_size"
                    app:ms_baseColor="@color/text_color"
                    app:ms_enableErrorLabel="false"
                    app:ms_enableFloatingLabel="true"
                    app:ms_highlightColor="@color/text_color"
                    app:ms_hint="@string/complaint"
                    app:ms_hintColor="@color/text_color"
                    app:ms_multiline="false" />

                <android.support.design.widget.TextInputLayout
                    style="@style/TextLabel_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/appointment_edt_remark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/remark"
                        android:maxLines="1"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*()+_-,.0123456789 "
                        android:paddingLeft="@dimen/ten_margin"
                        android:singleLine="true"
                        android:maxLength="100"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    style="@style/TextLabel_setting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/appointment_edt_reschedule_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/appointmentrereason"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/ten_margin"
                        android:maxLength="100"
                        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*()+_-,.0123456789 "
                        android:singleLine="true"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/small_text_size" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
