<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    android:padding="10dp">

    <Chronometer
        android:id="@+id/complaints_list_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/border_lighter_gray"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Presenting Complaints"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/chiefComplaints_edit"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:focusable="false"
            android:padding="10dp"
            android:textSize="14sp"
            android:gravity="top"
            android:background="@drawable/border_primary_dark"
            android:maxHeight="80dp"  />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/chiefComplaints_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/small_text_size"
            app:ms_arrowColor="@color/text_color"
            app:ms_arrowSize="@dimen/small_text_size"
            app:ms_baseColor="@color/text_color"
            app:ms_enableErrorLabel="false"
            app:ms_enableFloatingLabel="true"
            app:ms_highlightColor="@color/text_color"
            app:ms_hint="Select Chief Complaints"
            app:ms_hintColor="@color/text_color"
            android:layout_marginTop="2dp"
            app:ms_multiline="false" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="10dp"
            android:text="Associate Complaints"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/assosciateComplaints_edit"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:focusable="false"
            android:padding="10dp"
            android:textSize="14sp"
            android:gravity="top"
            android:background="@drawable/border_primary_dark"
            android:maxHeight="80dp"  />

        <fr.ganfra.materialspinner.MaterialSpinner
            android:id="@+id/assosciateComplaints_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_primary_dark"
            android:textSize="@dimen/small_text_size"
            app:ms_arrowColor="@color/text_color"
            app:ms_arrowSize="@dimen/small_text_size"
            app:ms_baseColor="@color/text_color"
            app:ms_enableErrorLabel="false"
            app:ms_enableFloatingLabel="true"
            app:ms_highlightColor="@color/text_color"
            app:ms_hint="Select Associate Complaints"
            app:ms_hintColor="@color/text_color"
            app:ms_multiline="false"
            android:layout_marginTop="2dp"/>

    </LinearLayout>
</LinearLayout>
