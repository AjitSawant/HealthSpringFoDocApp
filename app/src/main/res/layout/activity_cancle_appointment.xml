<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical">

    <EditText
        android:id="@+id/cancel_appointment_edt_reason"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="@dimen/ten_margin"
        android:background="@drawable/border_whitedark"
        android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ!@#$%^*()+_-,.0123456789 "
        android:gravity="left"
        android:hint="@string/appointmentcanclereason"
        android:maxLines="1"
        android:padding="@dimen/ten_margin"
        android:singleLine="true"
        android:textColor="@color/text_color"
        android:textColorHint="@color/text_color" />

    <Button
        android:id="@+id/cancel_appointment_bnt_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/ten_margin"
        android:background="@drawable/card_layout"
        android:text="@string/sumbmit"
        android:textColor="@color/white"
        android:textSize="@dimen/common_text_size" />

</LinearLayout>
