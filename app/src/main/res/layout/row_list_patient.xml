<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    android:background="@drawable/border_whitedark"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/five_margin">

    <ImageView
        android:id="@+id/row_search_patient_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="@dimen/five_margin"
        android:src="@drawable/dash_profile_male" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ten_margin">

        <TextView
            android:id="@+id/row_search_patient_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/row_search_patient_mobile_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_search_patient_age_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_search_patient_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@color/colorGreen"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/row_search_patient_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/blue_box"
            android:textSize="11sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/patient_row_bnt_book"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/card_layout"
                android:gravity="center_vertical|center_horizontal"
                android:text="Book"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/patient_row_bnt_visit"
                android:layout_width="50dp"
                android:layout_height="26dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/card_layout"
                android:gravity="center_vertical|center_horizontal"
                android:text="Visit"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/patient_row_bnt_patient_console"
            android:layout_width="104dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@drawable/card_layout"
            android:gravity="center_vertical|center_horizontal"
            android:text="Patient Console"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>
