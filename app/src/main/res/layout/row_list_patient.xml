<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_whitedark"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:layout_margin="6dp"
    android:padding="@dimen/five_margin">

    <ImageView
        android:id="@+id/row_search_patient_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="@dimen/five_margin"
        android:src="@drawable/dash_profile_male" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/ten_margin">

        <TextView
            android:id="@+id/row_search_patient_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="bmgbmg"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/row_search_patient_mrno_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="bmgbmg"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/patient_row_bnt_book"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/card_layout"
            android:gravity="center_vertical|center_horizontal"
            android:padding="3dp"
            android:text="Book"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/patient_row_bnt_visit"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/card_layout"
            android:gravity="center_vertical|center_horizontal"
            android:padding="3dp"
            android:text="Visit"
            android:textColor="@color/white"
            android:textSize="@dimen/common_text_size"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
