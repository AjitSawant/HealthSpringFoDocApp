<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border_gray"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/ten_margin"
    android:paddingLeft="@dimen/ten_margin"
    android:paddingTop="@dimen/ten_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <android.support.design.widget.TextInputLayout
                style="@style/TextLabel_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:gravity="right">

                <EditText
                    android:id="@+id/row_current_medication_tv_drug_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="@string/drug_name"
                    android:paddingTop="6dp"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:textColorHint="@android:color/darker_gray"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextLabel_setting"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:gravity="right">

                <EditText
                    android:id="@+id/row_current_medication_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:enabled="false"
                    android:hint="@string/date"
                    android:maxLines="2"
                    android:paddingTop="2dp"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:textSize="11sp" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorBlueTrans"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueTrans"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:text="@string/days"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlueTrans"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:text="@string/dose"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlueTrans"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:text="@string/reason"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_current_medication_tv_days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlueTrans"></View>

            <TextView
                android:id="@+id/row_current_medication_tv_dose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlueTrans"></View>

            <TextView
                android:id="@+id/row_current_medication_tv_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorBlueTrans"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBlueTrans"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/route"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlueTrans"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/frequency"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlueTrans"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:padding="2dp"
                android:text="@string/quntity"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_current_medication_tv_route"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlueTrans"></View>

            <TextView
                android:id="@+id/row_current_medication_tv_frequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/colorBlueTrans"></View>

            <TextView
                android:id="@+id/row_current_medication_tv_qty"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:gravity="center_horizontal"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textColorHint="@color/text_color"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/is_record_sync_tv"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light" />

</LinearLayout>