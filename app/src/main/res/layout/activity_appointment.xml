<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/ten_margin">

    <Chronometer
        android:id="@+id/appointment_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_card"
        android:orientation="vertical"
        android:layout_marginBottom="6dp"
        android:padding="8dp"
        android:visibility="visible">

        <android.support.design.widget.TextInputLayout
            style="@style/TextLabel_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/appointment_edt_patient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Patient Name"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="@dimen/ten_margin"
                android:singleLine="true"
                android:textColor="@color/text_color"
                android:textSize="@dimen/small_text_size" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                style="@style/TextLabel_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/appointment_edt_fromdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="From Date"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/ten_margin"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/small_text_size" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                style="@style/TextLabel_setting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/appointment_edt_todate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="To Date"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingLeft="@dimen/ten_margin"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textSize="@dimen/small_text_size" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/appointment_list_bnt_search"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_margin="1dp"
                android:background="@drawable/card_layout"
                android:gravity="center_vertical|center_horizontal"
                android:padding="3dp"
                android:text="Clear"
                android:textColor="@color/white"
                android:textSize="@dimen/common_text_size"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/appointment_List"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"
        android:dividerHeight="2dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/appointment_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/empty_list"
        android:textSize="@dimen/fifteen_margin" />
</LinearLayout>
