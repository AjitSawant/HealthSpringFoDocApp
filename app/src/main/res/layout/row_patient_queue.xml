<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_margin"
    android:background="@drawable/border_lighter_gray"
    android:orientation="vertical"
    android:padding="@dimen/five_margin">

    <TextView
        android:id="@+id/row_patient_queue_tv_dept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:padding="4dp"
        android:text="Department Name"
        android:textAllCaps="false"
        android:textColor="@color/blue_box"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/row_patient_queue_tv_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center_vertical"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Appointment Reason"
        android:textAllCaps="false"
        android:textColor="@color/colorGreen"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <TextView
            android:id="@+id/row_patient_queue_tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:paddingLeft="3dp"
            android:text="Date"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/row_patient_queue_tv_from_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="From Time"
            android:textAllCaps="false"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/row_patient_queue_tv_to_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="From Time"
            android:textAllCaps="false"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.01dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <ImageView
            android:id="@+id/row_patient_queue_iv_gender"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="@dimen/five_margin"
            android:src="@drawable/dash_profile_male" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/row_patient_queue_tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:paddingBottom="@dimen/five_margin"
                android:paddingRight="@dimen/five_margin"
                android:paddingTop="@dimen/five_margin"
                android:text="Patient Name"
                android:textAllCaps="false"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_patient_queue_tv_dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="DOB"
                android:textColor="@color/colorGreen"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/row_patient_queue_tv_bloodgroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:text="Blood Group"
                android:textColor="@color/colorOrange"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/row_patient_queue_tv_marital_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:text="Status"
                android:textColor="@color/text_color"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/row_patient_queue_tv_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:text="Contact"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/row_patient_queue_tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="left|center_vertical"
                android:text="Email"
                android:textSize="@dimen/small_text_size" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
