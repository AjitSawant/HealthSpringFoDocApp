<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/ten_margin"
    android:background="@drawable/border_primary_dark"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/six_margin"
    android:paddingLeft="@dimen/six_margin"
    android:paddingTop="@dimen/six_margin">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/six_margin"
        android:layout_weight="1"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_diagnosis_list_tv_diagnosis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="@dimen/small_text_size"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/row_diagnosis_list_tv_diagnosis_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:padding="2dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_diagnosis_list_tv_diagnosis_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:enabled="false"
                android:maxLines="3"
                android:padding="2dp"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/row_diagnosis_list_tv_diagnosis_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:enabled="false"
                android:padding="2dp"
                android:singleLine="true"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/row_diagnosis_list_tv_diagnosis_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:enabled="false"
            android:padding="2dp"
            android:singleLine="true"
            android:textAllCaps="false"
            android:textColor="@color/text_color"
            android:textSize="@dimen/small_text_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/is_record_sync_tv"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_light" />

</LinearLayout>
