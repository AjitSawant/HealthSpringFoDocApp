<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_primary_dark"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/row_appointment_tv_dept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left|center_vertical"
                android:padding="4dp"
                android:text="Department Name"
                android:textAllCaps="false"
                android:textColor="@color/blue_box"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/row_appointment_tv_unit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right|center_vertical"
                android:padding="4dp"
                android:text="Unit Name"
                android:layout_marginRight="4dp"
                android:textAllCaps="false"
                android:textColor="@color/colorGreen"
                android:textSize="12sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/row_appointment_tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="4dp"
            android:text="Appointment Reason"
            android:textAllCaps="false"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <TextView
                android:id="@+id/row_appointment_tv_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="3dp"
                android:text="Date"
                android:textAllCaps="false"
                android:textColor="@color/text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/row_appointment_tv_from_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="From Time"
                android:textAllCaps="false"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/row_appointment_tv_to_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="To Time"
                android:textAllCaps="false"
                android:textSize="12sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.01dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/bgcolor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/row_appointment_iv_gender"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="@dimen/five_margin"
                android:src="@drawable/dash_profile_male" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/row_appointment_tv_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:padding="@dimen/five_margin"
                    android:text="Patient Name"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/five_margin"
                    android:paddingLeft="@dimen/five_margin"
                    android:paddingRight="@dimen/five_margin">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/row_appointment_tv_dob"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="DOB"
                            android:textColor="@color/colorGreen"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/row_appointment_tv_marital_status"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="Status"
                            android:textColor="@color/text_color"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/row_appointment_tv_contact"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="left|center_vertical"
                            android:singleLine="true"
                            android:text="Contact"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/row_appointment_tv_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="left|center_vertical"
                            android:text="Email"
                            android:textSize="12sp"
                            android:visibility="visible" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/row_appointment_bnt_visit"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/card_layout"
                            android:gravity="center"
                            android:padding="@dimen/five_margin"
                            android:text="Visit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/row_appointment_bnt_reschedual"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/card_layout"
                            android:gravity="center"
                            android:padding="@dimen/five_margin"
                            android:text="Reschedule"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/row_appointment_bnt_cancle"
                            android:layout_width="80dp"
                            android:layout_height="30dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/card_layout"
                            android:gravity="center"
                            android:padding="@dimen/five_margin"
                            android:text="Cancel"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
